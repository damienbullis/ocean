{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "declaration": true,
    "target": "ES5",
    "module": "CommonJS",
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["jest.config.ts"]
}
