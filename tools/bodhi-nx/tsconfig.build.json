{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "declaration": true,
    "target": "es2015",
    "module": "esnext",
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "jest.config.ts"
  ]
}
